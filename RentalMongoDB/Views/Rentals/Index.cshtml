@model IEnumerable<RentalMongoDB.Models.RentalModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("PLate Number")
        </th>
        <th>
            @Html.DisplayName("Id Number")
        </th>
        <th>
            @Html.DisplayName("Rental Days")
        </th>
        <th>
            @Html.DisplayName("Cost")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Plate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentalDays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { @id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { @id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { @id = item.Id })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
